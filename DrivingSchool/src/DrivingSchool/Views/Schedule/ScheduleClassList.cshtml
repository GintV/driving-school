@model ScheduleClassListViewModel

@{
    ViewBag.Title += "User List";
}

<h1>Schedule Class List</h1>

<a class="btn btn-default" asp-controller="Schedule" asp-action="ScheduleEntry">
    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
    Back
</a>

<div class="form-group col-sm-12"></div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Class Type</th>
            <th>Date</th>
            <th>Start Time</th>
            <th>End Time</th>
            @if (Model.UserType == UserType.Student)
            {
                <th>Instructor</th>
            }
            else
            {
                <th>Student</th>
            }
            <th></th>
        </tr>
    </thead>
    @foreach (var @class in Model.List)
    {
        <tr>
            <td>@(@class.ClassType.GetDescription())</td>
            <td>@(@class.Date.ToString("yyyy-MM-dd"))</td>
            <td>@(@class.StartTime.ToString("HH:mm"))</td>
            <td>@(@class.EndTime.ToString("HH:mm"))</td>
            <td>@(@class.Atendee)</td>
            <td>@Html.ActionLink("Details", "ClassView", "Classes", new { id = @class.Id })</td>
        </tr>

    }
</table>

<div class="form-group col-sm-12"></div>

@if (Model.UserType == UserType.Student)
{
    <a class="btn btn-default" asp-controller="Schedule" asp-action="ScheduleChoise">
        <span class="fa fa-calendar-plus-o"></span><br />
        <b>Choose Classes</b>
    </a>
}
else
{
    <a class="btn btn-default" asp-controller="Classes" asp-action="ClassCreation">
        <span class="fa fa-edit"></span><br />
        <b>Create Classes</b>
    </a>
}
