@model ClassCreationViewModel

@{
    ViewBag.Title += "Classes Creation";
}


<h1>Create Classes</h1>

<a class="btn btn-default" asp-controller="Schedule" asp-action="ScheduleEntry">
    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
    Back
</a>

<div class="row">
    <div class="form-group col-sm-12"></div>
</div>


<form method="post" asp-antiforgery="true">
    
    <div class="well well-sm">

        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label asp-for="ClassType"></label>
            @Html.DropDownListFor(m => m.ClassType, Model.ClassTypeList, new { @class = "form-control" })
            <span asp-validation-for="ClassType"></span>
        </div>

        <div class="form-group">
            <label asp-for="Date"></label>
            <input class="form-control" asp-for="Date" />
            <span asp-validation-for="Date"></span>
        </div>

        <div class="form-group">
            <label asp-for="StartTime"></label>
            <input class="form-control" asp-for="StartTime" />
            <span asp-validation-for="StartTime"></span>
        </div>

        <div class="form-group">
            <label asp-for="EndTime"></label>
            <input class="form-control" asp-for="EndTime" />
            <span asp-validation-for="EndTime"></span>
        </div>

        <div class="form-group">
            <label asp-for="NumberOfSeats"></label>
            <input class="form-control" asp-for="NumberOfSeats" />
            <span asp-validation-for="NumberOfSeats"></span>
        </div>

        <div class="form-group">
            <label asp-for="Weeks"></label>
            <input class="form-control" asp-for="Weeks" />
            <span asp-validation-for="Weeks"></span>
        </div>

    </div>

    <div>
        <input type="submit" class="btn btn-default btn-lg" value="Save" />
    </div>

</form>
